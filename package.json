{
  "name": "confluence-to-markdown",
  "version": "1.2.0",
  "author": "Martin Lukes",
  "license": "MIT",
  "description": "Convert Confluence Pages to Markdown",
  "keywords": [
    "Confluence",
    "Markdown",
    "Confluence to Markdown"
  ],
  "bin": "./bin/confluence-to-markdown",
  "main": "./src/index.coffee",
  "repository": "git@github.com:meridius/confluence-to-markdown.git",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "coffeescript": "^2.7.0",
    "fs-extra":  "^11.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-fs": "^0.1.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "coffee ./src/index.coffee",
    "build": "coffee --output dist --compile src",
    "test": "NODE_ENV=test mocha -r coffeescript/register --compilers coffee:coffeescript --recursive ./test/*.coffee",
    "test-watch": "NODE_ENV=test mocha -r coffeescript/register --compilers coffee:coffeescript --recursive test/*.coffee --watch"
  }
}
